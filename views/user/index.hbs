<script>
    const $loginform = $('#contact-form')
$loginform.on('submit', submitHandlers)

function submitHandlers (e) {
  e.preventDefault()

   $.ajax({
        url: '/contact-us',   
        method: "post",
        data: $loginform.serialize(),
         success: (response) => {
             if(response.status){
                    $("#message-alert").css("display","block");
             }
        }

    })
}


</script>
