                                    <h2>Vendor Request</h2>
                                 </div>
                              </div>
                              <div class="table_section padding_infor_info">
                                 <div class="table-responsive-sm">
                                    <table class="table table-dark">
                                       <thead>
                                         <tr>
                                           <th>Sl No</th>
                                             <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>UnBock Vendor</th>
                                          </tr>
                                       </thead>
                                       <tbody>
                                           {{#each vendors}}
                                          <tr>
                                             <td>{{inc @index}}</td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.email}}</td>
                                            <td>{{this.phoneNumber}}</td>
                                                <td><a  href="/admin/approve-vendor/{{this._id}}" class="btn btn-primary d-inline-block">Approve</a>
              <a href="/admin/reject-vendor/{{this._id}}" class="btn btn-danger">Reject</a></td>
                                          </tr>
                                         {{/each}}
                                         
