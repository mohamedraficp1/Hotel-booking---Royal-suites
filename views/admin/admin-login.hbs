<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase mb-5 text-white">Admin Login</h2>
              <form name="adminLogin" id="adminLogin" action="/admin/login" method="post">
              <div class="form-outline form-white mb-4">
                <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg" placeholder="Email" minlength="4" required/>
                
              </div>

              <div class="form-outline form-white mb-4">
                <input type="password" minlength="4" name="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Password" required/>
               
              </div>
               {{#if paswdErr}}
                <p class="text-danger">Invalid password</p>
              {{/if}}
              {{#if userErr}}
                <p class="text-danger">Invalid Username </p>
              {{/if}}
            

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
            </form>
            </div>

           

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
